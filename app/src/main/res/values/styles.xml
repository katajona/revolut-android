<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28dp</item>
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.019</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="SecondaryTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:letterSpacing">-0.011</item>
    </style>

</resources>
